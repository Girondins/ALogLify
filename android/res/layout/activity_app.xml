<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="603dp"
        android:weightSum="1"
        android:id="@+id/infoViewID"
        android:visibility="gone"
        >

        <TextView
            android:text="Overview"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:gravity="center"/>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3">

            <Button
                android:text="Button"
                android:layout_height="wrap_content"
                android:id="@+id/prevBtnID"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_gravity="center"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/overViewHeaderID"
                    android:textSize="20dp"
                    android:gravity="center"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3">


                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/overViewTodayID"
                        android:gravity="center_horizontal"
                        android:textSize="15dp"
                        android:layout_weight="0.30"
                        />

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/overViewTodaySumID"
                        android:layout_weight="0.7"
                        android:textSize="25dp"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3">

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/overViewTotalID"
                        android:textSize="15dp"
                        android:gravity="center_horizontal"
                        android:layout_weight="0.30"
                        />

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/overViewTotalSumID"
                        android:layout_weight="0.7"
                        android:textSize="25dp"
                        android:layout_gravity="center"/>


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3">

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/overViewAvgID"
                        android:textSize="15dp"
                        android:gravity="center_horizontal"
                        android:layout_weight="0.30"
                        />

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/overViewAvgSumID"
                        android:layout_weight="0.7"
                        android:textSize="25dp"
                        android:layout_gravity="center"/>


                </LinearLayout>

            </LinearLayout>

            <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nextBtnID"
                android:layout_weight="1"
                android:elevation="1dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:id="@+id/boogieViewID">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Boogie"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4">

            <TextView
                android:text="Acheivements:"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="30dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:text="SHOES"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/shoesBtnID"
                    android:layout_weight="1" />

                <Button
                    android:text="GLASSES"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/glassesBtnID"
                    android:layout_weight="1" />

                <Button
                    android:text="BIKE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bikeBtnID"
                    android:layout_weight="1" />

                <Button
                    android:text="CAMERA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cameraBtnID"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>


        <Button
            android:text="RETURN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/returnBtnID" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/startViewID"
        android:weightSum="1">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="247dp"
            android:id="@+id/spineViewID"
            android:background="@drawable/walkpark">

        </RelativeLayout>

        </android.support.v4.widget.SwipeRefreshLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2">

                <Button
                    android:text="Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/calBTN"
                    android:layout_weight="0.33"
                    android:textSize="10sp"/>

                <Button
                    android:text="Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/stepsBTN"
                    android:layout_weight="0.33"
                    android:textSize="10sp"/>

                <Button
                    android:text="Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ageBTN"
                    android:layout_weight="0.33"
                    android:textSize="10sp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2">

                <Button
                    android:text="Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/commBtnID"
                    android:layout_weight="1" />

                <Button
                    android:text="Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/interactBtnID"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/infoTextID"
                android:layout_weight="0.2"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>